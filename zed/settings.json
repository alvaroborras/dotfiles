{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "notification_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "left"
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "Ubuntu Mono",
  "vim_mode": false,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "scrollbar": {
    "show": "always"
  },
  "cursors": "false",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Storm",
    "dark": "Sandcastle"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "chat_panel": {
    "dock": "left"
  },
  "current_line_highlight": "line",
  "show_completions_on_input": true,
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      },
      "format_on_save": "on"
    },
    "Rust": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Cpp": {
      "lsp": {
        "clangd": {
          "binary": {
            "path": "/usr/bin/clangd",
            "arguments": []
          }
        }
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "language_overrides": {
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    }
  }
}
